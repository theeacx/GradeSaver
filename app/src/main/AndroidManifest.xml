            android:name=".CsieGptActivity"
            android:exported="false" />
        <activity
            android:name=".AddPersonalActivityActivity"
            android:exported="false" />
        <activity
            android:name=".ProfessorCalendarActivity"
            android:exported="true" />
        <activity
            android:name=".StudentDashbordActivity"
            android:exported="false" />
        <activity
            android:name=".ManageRemindersActivity"
