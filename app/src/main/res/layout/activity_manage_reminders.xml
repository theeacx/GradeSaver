<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background"
    tools:context=".LoginActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@drawable/custom_edittext">

            <!-- Title: Manage reminders for activity -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manage reminders for activity"
                android:id="@+id/titleText"
                android:textSize="24sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/purple"/>

            <!-- Small TextView: Manage reminder schedule -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manage reminder schedule"
                android:textSize="18sp"
                android:gravity="left"
                android:paddingBottom="8dp"
                android:textColor="@color/purple"/>

            <!-- Inner CardView for Reminder Schedule -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/custom_edittext">

                    <!-- TextView: The schedule is "blablabla" -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="The schedule is: "
                        android:textSize="16sp"
                        android:paddingBottom="8dp"/>

                    <!-- Update Schedule Button -->
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Update Schedule"
                        android:backgroundTint="@color/purple"
                        android:layout_marginTop="8dp"
                        app:cornerRadius = "20dp"/>

                    <!-- Delete Schedule Button -->
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Delete Schedule"
                        android:backgroundTint="@color/purple"
                        android:layout_marginTop="8dp"
                        app:cornerRadius = "20dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- TextView: Manage Reminders -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manage reminders"
                android:textSize="18sp"
                android:gravity="left"
                android:paddingVertical="8dp"
                android:textColor="@color/purple"/>

            <!-- Inner CardView for List of Reminders -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="6dp">

                <ListView
                    android:id="@+id/listReminders"
                    android:layout_width="match_parent"
                    android:layout_height="208dp"
                    android:padding="8dp"
                    android:background="@drawable/custom_edittext"/>
            </androidx.cardview.widget.CardView>

            <!-- Button: Return to Courses -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/purple"
                android:minHeight="48dp"
                android:text="Return to Courses"
                tools:ignore="TouchTargetSizeCheck"
                app:cornerRadius = "20dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
