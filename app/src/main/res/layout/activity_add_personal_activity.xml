<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background"
    tools:context=".AddPersonalActivityActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@drawable/custom_edittext">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Personal Activity"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/purple"
                android:gravity="center"/>

            <EditText
                android:id="@+id/activityNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Activity Name"
                android:layout_marginTop="20dp"
                android:padding="12dp"
                android:textColor="@color/purple"
                android:backgroundTint="@color/purple"/>

            <TextView
                android:id="@+id/dueDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick Due Date"
                android:textSize="16sp"
                android:textColor="@color/purple"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/dueDateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Date"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/purple"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/dueTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick Due Time"
                android:textSize="16sp"
                android:textColor="@color/purple"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/dueTimeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Time"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/purple"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/addPersonalActivityButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Activity"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/purple"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
