<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".PersonalProfileActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="515dp"
            android:background="@drawable/custom_edittext"
            android:padding="24dp"
            tools:ignore="ExtraText">


            <!-- Delete Profile FloatingActionButton -->

            app:maxImageSize="56dp" <!-- Adjust if necessary -->
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:backgroundTint="@color/purple"
                app:tint="@null"
                android:padding="0dp" <!-- Set padding to 0dp to ensure the icon is centered -->
                app:fabCustomSize="56dp" <!-- You can also adjust the size of the FAB if needed -->
                app:borderWidth="0dp" <!-- Remove any border width that may cause misalignment --><![CDATA[/>



            ]]>
            <TextView
                android:id="@+id/personalProfileText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:text="Personal Profile"
                android:textAlignment="center"
                android:textColor="@color/purple"
                android:textSize="36sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/fab_delete_profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="104dp"
                android:layout_height="106dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="60dp"
                android:contentDescription="PIC"
                android:padding="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/personalProfileText"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/baseline_account_circle_24" />


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_delete_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="32dp"
                android:contentDescription="TRASHCAN"
                android:foregroundTint="@color/white"
                android:tintMode="multiply"
                app:backgroundTint="@color/purple"
                app:fabCustomSize="90dp"
                app:fabSize="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/personalProfileText"
                app:layout_constraintTop_toTopOf="parent"
                app:maxImageSize="60dp"
                app:srcCompat="@android:drawable/ic_menu_delete"
                app:tint="@color/white" />

            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:editable="false"
                android:hint="Name"
                android:inputType="textPersonName"
                android:padding="8dp"
                app:layout_constraintBottom_toTopOf="@+id/positionEditText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profileImage"
                tools:ignore="TextContrastCheck" />

            <EditText
                android:id="@+id/positionEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:editable="false"
                android:hint="Position"
                android:padding="8dp"
                app:layout_constraintBottom_toTopOf="@+id/logoutButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nameEditText" />


            <Button
                android:id="@+id/changePasswordButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/purple"
                android:text="Change Password"
                app:cornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/logoutButton"
                tools:ignore="DuplicateClickableBoundsCheck" />

            <Button
                android:id="@+id/logoutButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/purple"
                android:text="Logout"
                app:cornerRadius="20dp"
                app:layout_constraintBottom_toTopOf="@+id/changePasswordButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/positionEditText" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- The rest of the views like EditTexts and Buttons can be constrained below the CardView -->

</androidx.constraintlayout.widget.ConstraintLayout>
