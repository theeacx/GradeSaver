<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background"
    tools:context=".AddRemindersActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@drawable/custom_edittext">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reminders for [Activity Name]"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/purple"
                android:gravity="center"/>

            <Spinner
                android:id="@+id/reminderTypeSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/reminder_types"
                android:layout_marginTop="20dp"
                android:minHeight="48dp"/>

            <EditText
                android:id="@+id/numberField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Input the number of reminders"
                android:inputType="number"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:minHeight="48dp"/>

            <EditText
                android:id="@+id/messageField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Custom Message for the reminders"
                android:inputType="text"
                android:minHeight="48dp"/>

            <Button
                android:id="@+id/addReminderButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Reminders"
                android:textSize="18sp"
                android:layout_marginTop="20dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
