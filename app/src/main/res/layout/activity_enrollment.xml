<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background"
    tools:context=".EnrollmentActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@drawable/custom_edittext">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enroll in a Course"
                android:textSize="36sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/purple"
                android:layout_marginBottom="16dp"/>

            <AutoCompleteTextView
                android:id="@+id/professorEmailAutocomplete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/baseline_magnifier"
                android:drawablePadding="10dp"
                android:hint="Professor Email"
                android:inputType="textEmailAddress"
                android:minHeight="48dp" />

            <AutoCompleteTextView
                android:id="@+id/courseNameAutocomplete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:drawableEnd="@drawable/baseline_magnifier"
                android:drawablePadding="10dp"
                android:hint="Course Name"
                android:inputType="text"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/enrollmentCodeEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Enrollment Code"
                android:inputType="textPassword"
                android:minHeight="48dp" />

            <Button
                android:id="@+id/confirmEnrollmentButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enroll"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/purple"
                app:cornerRadius="20dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
